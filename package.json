{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Clean Architecture for node.js projects (Typescript + Express + TypeORM + Typedi)",
  "main": "main.ts",
  "repository": "https://github.com/satishbabariya/nodejs-boilerplate.git",
  "author": "Satish Babariya <satish.babariya@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "start": "nodemon",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "agenda": "^2.0.2",
    "argon2": "0.24.0",
    "body-parser": "1.19.0",
    "celebrate": "10.0.1",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-jwt": "5.3.1",
    "helmet": "3.18.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.2.7",
    "reflect-metadata": "0.1.13",
    "typedi": "0.8.0",
    "typeorm": "0.2.18",
    "typeorm-typedi-extensions": "0.2.3"
  },
  "devDependencies": {
    "@types/agenda": "^2.0.4",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/express-jwt": "0.0.42",
    "@types/helmet": "0.0.43",
    "@types/jest": "24.0.15",
    "@types/joi": "^14.3.3",
    "@types/morgan": "1.7.35",
    "@types/node": "12.0.8",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "tslint": "5.17.0",
    "typescript": "^3.5.1"
  }
}
