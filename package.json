{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Clean Architecture for node.js projects (Typescript + Express + TypeORM + Typedi)",
  "main": "main.ts",
  "repository": "https://github.com/satishbabariya/nodejs-boilerplate.git",
  "author": "Satish Babariya <satish.babariya@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "start": "nodemon",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "agenda": "^3.0.0",
    "argon2": "0.26.2",
    "body-parser": "1.19.0",
    "celebrate": "13.0.4",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-jwt": "6.0.0",
    "helmet": "3.23.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.6.3",
    "reflect-metadata": "0.1.13",
    "typedi": "0.8.0",
    "typeorm": "0.2.25",
    "typeorm-typedi-extensions": "0.2.3"
  },
  "devDependencies": {
    "@types/agenda": "2.0.8",
    "@types/cors": "2.8.6",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.7",
    "@types/express-jwt": "0.0.42",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.4",
    "@types/joi": "14.3.4",
    "@types/morgan": "1.9.1",
    "@types/node": "14.14.8",
    "jest": "26.1.0",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "26.4.4",
    "ts-node": "8.10.2",
    "tslint": "6.1.2",
    "typescript": "3.9.6"
  }
}
